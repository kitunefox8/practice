.body
  .header
    .header-top
      = link_to image_tag("//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?3466462615", class: 'image'), '#'
    .header-bottom
      .header-list
        .text
          会員情報
        .icon
          ●
      .header-list
        .text
          電話番号認証
        .icon
          ●
      .header-list
        .text-active
          お届け先住所入力
        .icon
          ●
      .header-list
        .text-active
          お支払い方法
        .icon-active
          ●
      .header-list
        .text
          完了
        .icon
          ●

  .new-session-main
    .new-session-main__top
      クレジットカード情報入力
    .new-session-main__body
      .form
        .field
          %label.top-text カード番号
          %span.top-red-text 必須
          %br/
          %input{name: "credit-number", placeholder: '例）半角数字のみ', size: "30", class: 'textarea'}
          %ul.signup-card-list
            %li
              = image_tag "//www-mercari-jp.akamaized.net/assets/img/card/visa.svg?2296184308", class: 'card-image'
            %li
              = image_tag "//www-mercari-jp.akamaized.net/assets/img/card/master-card.svg?2296184308", class: 'card-image'
            %li
              = image_tag "//www-mercari-jp.akamaized.net/assets/img/card/saison-card.svg?2296184308", class: 'card-image'
            %li
              = image_tag "//www-mercari-jp.akamaized.net/assets/img/card/jcb.svg?2296184308", class: 'card-image'
            %li
              = image_tag "//www-mercari-jp.akamaized.net/assets/img/card/american_express.svg?2296184308", class: 'card-image'
            %li
              = image_tag "//www-mercari-jp.akamaized.net/assets/img/card/dinersclub.svg?2296184308", class: 'card-image'
            %li
              = image_tag "//www-mercari-jp.akamaized.net/assets/img/card/discover.svg?2296184308", class: 'card-image'

        .field
          %label.top-text 有効期限
          %span.top-red-text 必須
          %br/
          .selecter
            .monthday-selecter
              -# = fa_icon 'chevron-down', class: 'icon-bottom'
              %select.select-monthday{name: "month"}
                %option{value: "1"} 1
                %option{value: "2"} 2
                %option{value: "3"} 3
                %option{value: "4"} 4
                %option{value: "5"} 5
                %option{value: "6"} 6
                %option{value: "7"} 7
                %option{value: "8"} 8
                %option{value: "9"} 9
                %option{value: "10"} 10
                %option{value: "11"} 11
                %option{value: "12"} 12
              %span 月

            .monthday-selecter
              -# = fa_icon 'chevron-down', class: 'icon-bottom'
              %select.select-monthday{name: "day"}
                %option{value: "19"} 19
                %option{value: "20"} 20
                %option{value: "21"} 21
                %option{value: "22"} 22
                %option{value: "23"} 23
                %option{value: "24"} 24
                %option{value: "25"} 25
                %option{value: "26"} 26
                %option{value: "27"} 27
                %option{value: "28"} 28
                %option{value: "29"} 29
              %span 日
            
        .field
          %label.top-text セキュリティカード
          %span.top-red-text 必須
          %br/
          %input{name: "credit-number", placeholder: '例）カード背面４桁もしくは3桁の番号', size: "40", class: 'textarea'}
          
        .field-right
          .right-text 
            = fa_icon 'question-circle', class: 'icon-question'
            %label.top-text カード番号の裏面とは

        .field
          %input.form-submit{type: 'submit', value: '追加する'}

  = render 'footer'